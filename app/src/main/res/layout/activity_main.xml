<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/Testbutton"
        android:layout_marginTop="69dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/Testbutton"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/Testbutton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="658dp"
        android:layout_marginBottom="104dp" />

    <EditText
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Quesize"
        android:layout_toStartOf="@+id/editText2"
        android:layout_toEndOf="@+id/Testbutton"
        android:minWidth="1000dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:text="41494" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="8"
        android:id="@+id/editText2"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:text="50573" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Major"
        android:id="@+id/t1"
        android:layout_toStartOf="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/Testbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Minor"
        android:id="@+id/t2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_toEndOf="@+id/Quesize"
        android:layout_toStartOf="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:hint="meter" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        android:id="@+id/checkBox"
        android:layout_alignTop="@+id/editText3"
        android:layout_toEndOf="@+id/Testbutton"
        android:layout_toStartOf="@+id/editText3"
        android:checked="false"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorithm"
        android:id="@+id/checkBox2"
        android:layout_toEndOf="@+id/t1"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/t2"
        android:checked="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoothingz"
        android:id="@+id/checkBox3"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_alignStart="@+id/editText3"
        android:checked="false" />

</RelativeLayout>
